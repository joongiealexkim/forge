            <artifactId>maven-antrun-plugin</artifactId>
            <version>3.0.0</version>
            <executions>
              <execution>
                <id>android-release-packaging</id>
                <phase>package</phase>
                <goals>
                  <goal>run</goal>
                </goals>
                <configuration>
                  <target>
                    <copy todir="${project.build.directory}/res">
                      <fileset includes="LICENSE.txt" dir="${basedir}/../forge-gui/" />
                      <fileset includes="CONTRIBUTORS.txt" dir="${basedir}/../forge-gui/release-files/" />
                      <fileset includes="INSTALLATION.txt" dir="${basedir}/../forge-gui/release-files/" />
