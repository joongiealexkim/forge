                      <fileset includes="sentry.properties" dir="${basedir}/../forge-gui-mobile-dev/" />
                      <fileset dir="${basedir}/../forge-gui/">
                        <include name="res/**" />
                        <exclude name="res/cardsfolder/**" />
                      </fileset>
                    </copy>
                    <copy todir="${project.build.directory}/res/res">
                      <fileset dir="${project.build.directory}/classes/assets">
                        <include name="build.txt" />
                      </fileset>
                    </copy>
                    <mkdir dir="${project.build.directory}/res/res/cardsfolder" />
                    <zip basedir="${basedir}/../forge-gui/res/cardsfolder" destfile="${project.build.directory}/res/res/cardsfolder/cardsfolder.zip" level="1" />
                    <zip basedir="${project.build.directory}/res" destfile="${project.build.directory}/assets.zip" level="1" />
                    <delete dir="${project.build.directory}/res" />
                  </target>
                </configuration>
              </execution>
            </executions>
            <dependencies>
              <dependency>
                <groupId>org.apache.ant</groupId>
                <artifactId>ant-nodeps</artifactId>
                <version>1.8.1</version>
              </dependency>
            </dependencies>
          </plugin>
        </plugins>
      </build>
      <properties>
        <packaging.type>apk</packaging.type>
      </properties>
