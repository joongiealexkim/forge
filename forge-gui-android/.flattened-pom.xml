                      </fileset>
                    </ftp>
                    <ftp server="${cardforge.server}" password="${cardforge.pass}" remotedir="maven/releases/forge/forge-gui-android/" userid="${cardforge.user}" passive="true">
                      <fileset dir="${project.build.directory}/classes/assets">
